<?php

require("model.php");
require("view.php");

class Controller {
 
private $error;
 
private $result;

 
#конструктор 
function __construct() {
 
$this->error = false;
 
$this->result = false;
 
}

 
#запуск контроллера
function processData() {
 
$this->userRequest();
 
if ($this->error!="")
 
View::displayError($this->error);
 
else
 
if ($this->result)
 
View::displayResults($this->result);
 
else
 
View::displayDefault();
 
}


#работа с классом MODEL 
function userRequest() {
 
// данные отправлены

if (isset($_POST['send'])) {
$this->validate();

if (!$this->error) {
 
// основные вычислени€
 
$model = new Model();
 
$model->calculate("c:/menu.doc");
 
$result = $model->getData();
 
// проверка на ошибки в самой модели
 
 
$this->result = $result;
 
}
 
}
}
 

# проверка
function validate() {
 
if (empty($_POST['filepath']))
 
$this->error = 'Ќе введено им€!';
 
 
}
 
} // class Controller

?>
